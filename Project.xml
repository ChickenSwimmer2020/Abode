    <meta title="Abode" description="An HAXE based animation software made to rival Adobe Animate" package="com.chickenswimmer2020.abode" version="0.00.000" company="ChickenSwimmer2020" build-number="0"/>
    <app file="Abode" main="Main"/>
    <window allow-high-dpi="true" minimized="true" title="Abode: Animation Suite" vsync="true" width="1280" height="720"/>


    <source path="source"/>
    <assets path="assets"/>

    <haxelib name="flixel"/>
